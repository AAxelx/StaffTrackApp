@page
@model StaffModel
@{
    ViewData["Title"] = "Staff";
}

<div class="text-center">
    <div class="container mt-4">
        <h1>Employee List</h1>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-2">
            <h4>Filters</h4>
            <form method="get">
                <div class="form-group">
                    <label class="filter-label" for="department">Department</label>
                    <div id="department-content" class="filter-content hidden">
                        @foreach (var department in Model.Departments)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="department-@department.Id" name="DepartmentId" value="@department.Name">
                                <label class="form-check-label" for="department-@department.Id">
                                    @department.Name
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label class="filter-label" for="position">Position</label>
                    <div id="position-content" class="filter-content hidden">
                        @foreach (var position in Model.Positions)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="position-@position.Id" name="Position" value="@position.Name">
                                <label class="form-check-label" for="position-@position.Id">
                                    @position.Name
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="Name" />
                </div>
                <form method="get">
                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                    </div>
                </form>
            </form>
        </div>
        <div class="col-md-10">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Full Name</th>
                        <th>Department</th>
                        <th>Position</th>
                        <th>Salary</th>
                        <th>Phone</th>
                        <th>DateOfBirth</th>
                        <th>EmploymentDate</th>
                        <th>Adress</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.FullName</td>
                            <td>@employee.DepartmentId</td>
                            <td>@employee.PositionId</td>
                            <td>@employee.Salary</td>
                            <td>@employee.Phone</td>
                            <td>@employee.DateOfBirth.ToShortDateString()</td>
                            <td>@employee.EmploymentDate.ToShortDateString()</td>
                            <td>@employee.Address</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
